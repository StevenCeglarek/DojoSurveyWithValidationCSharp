@{
    ViewData["Title"] = "HomePage";
}
@model SurveyModel
<div>
    <h1>Submitted Info</h1>
    <div class="d-flex gap-2 mb-3">
        <p>Name:</p>
        <p>@Model.Name</p>
    </div>
    <div class="d-flex gap-2 mb-3">
        <p>Location:</p>
        <p>@Model.Location</p>
    </div>
    <div class="d-flex gap-2 mb-3">
        <p>Language:</p>
        <p>@Model.Language</p>
    </div>
    <div class="d-flex gap-2 mb-3">
        <p>Comment (Optional):</p>
        @if (Model.Comment == null)
            {<p class="text-secondary">No Comment</p>}
         else {<p>@Model.Comment</p>}
    </div>
</div>